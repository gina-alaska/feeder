.navbar.navbar-static-top.navbar-inverse
  .navbar-inner
    / .container
    = image_tag("puffin.png", :class => :puffin)
    = link_to '/', :class => 'brand' do
      %span.gina.text GINA
      %span.text Puffin Feeder

    %ul.nav.pull-right
      %li
        = link_to root_url, "data-skip-pjax" => true do
          %i.icon-home.icon-white
          Home
      %li
        = link_to 'https://uafgina.zendesk.com/anonymous_requests/new', target: :_blank do
          %i.icon-envelope.icon-white
          Send Feedback
      - if user_signed_in?
        - if current_user.user_admin?
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              Manage
              %span.caret
            %ul.dropdown-menu
              %li= link_to 'Users', manage_users_path
        %li= link_to 'Profile', profile_path(current_user)
        %li
          = link_to 'Sign Out', destroy_user_session_path, method: :delete
      - else
        %li.dropdown
          = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
            Sign In
            %span.caret
          %ul.dropdown-menu{ data: { turbolinks:"false" } }
            %li
              = link_to 'GINA::ID', user_gina_id_omniauth_authorize_path
