.row-fluid
  .span3
    %ul.nav.feed-picker.hidden-phone
      %li
        = link_to root_path do
          All
          .pull-right
            %span.badge= @all
            %i.icon-chevron-right
            
      - @keywords.sort.each do |i|
        %li
          = link_to root_path(:q => i) do
            = i
            .pull-right
              %span.badge= @counts[i]
              %i.icon-chevron-right
  .span9
    .entries
      - @feeds.each do |feed|
        - next if feed.entries.size == 0
        .feed
          %h4= feed.title
          - if feed.entries.first and feed.status.to_sym == :online
            = render feed.entries.first, :feed => feed
          - else
            = render 'offline', :feed => feed