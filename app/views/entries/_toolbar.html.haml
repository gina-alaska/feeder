.navbar.navbar-static-top
  .navbar-inner
    %button.btn.btn-navbar{ data: { toggle: 'collapse', target: '.nav-collapse' } }
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .brand
      = entry.feed.title
    .nav-collapse.collapse
      .pull-right.navbar-text
        .btn-group
          %button.btn{ data: { action: 'resize', url: slug_entry_path(entry.feed, entry, size: 'mobile') }, class: (cookies[:preview_size] == 'mobile' ? 'active' : '') }
            %i.icon-mobile-phone
          %button.btn{ data: { action: 'resize', url: slug_entry_path(entry.feed, entry, size: 'laptop') }, class: (cookies[:preview_size] == 'laptop' ? 'active' : '') }
            %i.icon-laptop
          %button.btn{ data: { action: 'resize', url: slug_entry_path(entry.feed, entry, size: 'desktop') }, class: (cookies[:preview_size] == 'desktop' ? 'active' : '') }
            %i.icon-desktop
        .btn-group
          = link_to entry.image.remote_url, class: 'btn' do
            %i.icon-download
            Download