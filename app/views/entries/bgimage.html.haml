- bgclass = 'active'
.bgimages
  - @entries.results.reverse.each do |entry|
    .image{ class: bgclass }
      %img{ src: entry.preview.thumb('1440x990#').url }
      - bgclass = ''
:javascript
  var next_image = function() {
    var img = $('.bgimages .image.active')
    img.removeClass('active')
    if (img.next('.image').length > 0) {
      img.next().addClass('active');
    } else {
      $('.bgimages .image:first').addClass('active');
    }
  }
  $(document).ready(function() {
    setInterval(next_image, 3000);
  })