.row-fluid
  .span3.prev
    - if prev_entry = entry.prev
      - prev_page = prev_entry ? slug_entry_path(feed, prev_entry) : '#'
      = link_to prev_page, class: 'btn btn-large btn-block' do
        %i.icon-arrow-left
        Prev
  .span6
    = link_to link, class: 'clearfix' do
      = entry.event_at.strftime('%Y-%m-%d %H:%M %Z')
      = "(JD#{entry.event_at.yday})"    
  .span3.next
    - if next_entry = entry.next
      - next_page = next_entry ? slug_entry_path(feed, next_entry) : '#'
      = link_to next_page, class: 'btn btn-large btn-block' do
        Next
        %i.icon-arrow-right