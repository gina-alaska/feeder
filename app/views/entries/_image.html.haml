- current = current_page?(slug_entry_path(feed, entry)) || current_page?(slug_entry_path(feed, 'current'))
.image
  - if current
    = image_tag(cw_image_url(entry.preview.try(:thumb, '800x800')), alt: entry.title)
  - else
    = image_tag(cw_image_url(entry.preview.try(:thumb, '250x250#')), alt: entry.title)
