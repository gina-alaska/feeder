- size ||= 'small'
.entry
  = render size, :entry => stuff
  .ago
    Processed
    %abbr.timeago{title:stuff.event_at.iso8601}= stuff.event_at.strftime('%F')
    /= time_ago_in_words(stuff.event_at)
    /ago
  .sizes.btn-group
    = link_to 'Medium', cw_image_url(stuff.preview.try(:thumb, '1600x>')), class: 'btn', 'data-skip-pjax' => true
    = link_to 'Large', cw_image_url(stuff.preview), class: 'btn', 'data-skip-pjax' => true
    = link_to 'Original', stuff.image.remote_url, class: 'btn', 'data-skip-pjax' => true      

