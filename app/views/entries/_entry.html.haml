- cache([entry, cookies[:preview_size], 'preview', 'v3']) do
  .image{ id: dom_id(entry, :preview) }
    = preview_image_tag(entry)
    .caption
      = entry.feed.title 
      \- 
      = entry.title
      = surround '(', ')' do
        %abbr.timeago{title:entry.event_at.iso8601}= entry.event_at.strftime('%F')      