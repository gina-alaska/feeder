watch '/mnt/incoming/barrow_radar' do
  match extension any do
    case filename.split('.').last.to_sym
    when :tif
      slug = 'radar-uaf-barrow-seaice-geotif'
      run "script/quick_import.sh \"#{slug}\" \"#{filename}\""
    when :png
      slug = 'radar-uaf-barrow-seaice-images'
      run "script/quick_import.sh \"#{slug}\" \"#{filename}\""
    end
  end
end
