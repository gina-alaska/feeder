watch "/mnt/npp", :force_polling => true, :latency => 10 do
  match extension md5 do
    Dir.chdir '/home/webdev/gits/feeder' do
      path = File.dirname(filename)
      scene_id = File.basename(filename, '.md5')
      run "script/import_npp.sh \"npp-gina-alaska-truecolor-images\" \"#{path}/#{scene_id}_M05_M04_M03_I01.tif\""
      run "script/import_npp_landcover.sh \"#{path}/#{scene_id}_I03_I02_I01.tif\""
      run "script/import_npp.sh \"npp-gina-alaska-dnb-images\" \"#{path}/#{scene_id}_DNB.tif\""
    end
  end
end
