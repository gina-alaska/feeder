<% @databases.each do |environment, database| %>
<%= environment %>:
  adapter: <%= database['adapter'] %>
  database: <%= database['database'] %>
  username: <%= database['username'] %>
  password: <%= database['password'] %>
  schema_search_path: <%= database['search_path'] %>
  host: <%= database['host'] %>
  client_encoding: UTF8
<% end %>
